<!DOCTYPE html>
<html>
  <head>
    
    <!-- Mobile First -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title> <%= arg['title'] %></title>
    
    <!-- CSS | Material -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.1/material.indigo-pink.min.css">
    <link rel="stylesheet" href="css/style.css">
    
    <!-- CSS | Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    
  </head>
  <body id="particles">

      <% include includes/navbar.ejs %>

    <div id="intro">
      <% include includes/header.ejs %>
      <div class="container">
				<% for (var i = 0; i < arg['categories'].length; i= i+2){%>
        <div class="row">					
          <div class="col-md-3 col-md-offset-3 mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title">
              <h2 class="mdl-card__title-text text-center"><%= arg['categories'][i].name_category%></h2>
            </div>
						<div class="box effect1">
						<% var nom = arg['categories'][i].name_category;
						if(arg['points'][nom] != undefined) {%>
							<h3 style="margin-top:0px"><%= arg['points'][nom]%> points</h3>
							<% } else { %>
							<h3 style="margin-top:0px">0 points</h3>
						<% } %>
						</div>
            <div class="mdl-card__supporting-text"><%= arg['categories'][i].desc_category%>
            </div>
            <div class="sport mdl-card__actions mdl-card--border">
              <button style="background:#<%=arg['categories'][i].desc_color %>" class="sport mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" onclick="window.location.href='/play?id=<%= arg['categories'][i].id_category%>'">
                Get Started
              </button>
            </div>
          </div>
          <div class="col-md-3 mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title">
              <h2 class="mdl-card__title-text text-center"><%= arg['categories'][i+1].name_category%></h2>
            </div>
						
            <div class="box effect1">
						<% var nom_2 = arg['categories'][i+1].name_category;
						if(arg['points'][nom_2] != undefined) {%>
							<h3 style="margin-top:0px"><%= arg['points'][nom_2]%> points</h3>
							<% } else { %>
							<h3 style="margin-top:0px">0 points</h3>
						<% } %>
            </div>
						
            <div class="mdl-card__supporting-text"><%= arg['categories'][i+1].desc_category%>
            </div>
            <div class="history mdl-card__actions mdl-card--border">
              <button style="background:#<%=arg['categories'][i+1].desc_color %>" class="history mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" onclick="window.location.href='/play?id=<%= arg['categories'][i+1].id_category%>'">
                Get Started
              </button>
            </div>
          </div>
        </div>
				<% } %>
      </div>
      <% include includes/footer.ejs %>
    </div>
  </body>
      
  <% include includes/script.ejs %>
    
  <script>
  $('.message a').click(function(){
    $('form').animate({height: "toggle", opacity: "toggle"}, "slow");
  });
  </script>
  
</html>